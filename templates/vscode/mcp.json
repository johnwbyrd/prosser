{
  "name": "AWS Bedrock",
  "description": "AWS Bedrock integration for VS Code using MCP protocol",
  "version": "1.0.0",
  "protocol": "mcp",
  "transport": {
    "type": "http",
    "url": "https://api.yourdomain.com/v1/mcp",
    "headers": {
      "Content-Type": "application/json",
      "x-api-key": "${API_KEY}"
    }
  },
  "models": [
    {
      "id": "anthropic.claude-3-opus-20240229-v1",
      "name": "Claude 3 Opus",
      "contextWindow": 200000,
      "supportsTools": true
    },
    {
      "id": "anthropic.claude-3-sonnet-20240229-v1",
      "name": "Claude 3 Sonnet",
      "contextWindow": 180000,
      "supportsTools": true
    },
    {
      "id": "anthropic.claude-3-haiku-20240307-v1",
      "name": "Claude 3 Haiku",
      "contextWindow": 150000,
      "supportsTools": true
    }
  ],
  "tools": [
    {
      "id": "filesystem",
      "description": "Provides access to the filesystem"
    },
    {
      "id": "command",
      "description": "Allows execution of terminal commands"
    }
  ],
  "auth": {
    "type": "api_key",
    "instructions": "Enter your AWS Bedrock Proxy API key"
  },
  "vscode": {
    "extension": "aws-bedrock-mcp",
    "configuration": {
      "api_key": {
        "type": "string",
        "default": "",
        "description": "AWS Bedrock Proxy API Key"
      },
      "default_model": {
        "type": "string", 
        "default": "anthropic.claude-3-sonnet-20240229-v1",
        "description": "Default model to use"
      }
    }
  }
} 
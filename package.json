{
  "name": "bedrock-openai-proxy",
  "version": "1.0.0",
  "description": "AWS Bedrock OpenAI-compatible API proxy service",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/local-server.js",
    "test": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:load": "artillery run tests/load-test.yml",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "webpack --mode production",
    "build:production": "webpack --mode production",
    "deploy:dev": "sam deploy --stack-name bedrock-proxy-dev --parameter-overrides=\"$(cat infra/parameters/dev.json)\"",
    "deploy:prod": "sam deploy --stack-name bedrock-proxy-prod --parameter-overrides=\"$(cat infra/parameters/prod.json)\"",
    "validate": "sam validate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/bedrock-openai-proxy.git"
  },
  "keywords": [
    "aws",
    "bedrock",
    "openai",
    "api",
    "proxy",
    "serverless"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.511.0",
    "@aws-sdk/client-dynamodb": "^3.511.0",
    "@aws-sdk/lib-dynamodb": "^3.511.0",
    "@aws-sdk/client-cloudwatch": "^3.511.0",
    "aws-xray-sdk-core": "^3.5.3",
    "express": "^4.18.3",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "artillery": "^2.0.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "aws-sdk-mock": "^5.9.0"
  }
} 